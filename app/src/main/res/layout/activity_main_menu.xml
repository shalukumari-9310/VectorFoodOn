<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_goneMarginBottom="20dp"
    tools:context=".MainMenu">

    <ImageView
        android:id="@+id/back2"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img1" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="278dp"
        android:layout_height="394dp"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/background_shape"
        android:gravity="center|top"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@+id/back2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/asset"
            android:gravity="center|top"
            android:padding="8dp"
            android:text="@string/vector_food_on"
            android:textColor="@android:color/holo_green_light"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="8dp"
            android:fontFamily="cursive"
            android:gravity="center"
            android:padding="20dp"
            android:text="@string/eat_homemade_anywhere"
            android:textColor="#FFD600"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/SiginwithEmail"
            android:layout_width="234dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btnred"
            android:drawableLeft="@drawable/whiteemail"
            android:paddingLeft="30dp"
            android:paddingEnd="2dp"
            android:paddingRight="2dp"
            android:text="@string/sigin_with_email" />

        <Button
            android:id="@+id/SiginwithPhone"
            android:layout_width="234dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/btnbluish"

            android:drawableLeft="@drawable/phonewhite"
            android:paddingLeft="30dp"
            android:paddingRight="2dp"

            tools:text="@string/SiginwithPhone"
            android:layout_marginLeft="40dp"
            android:paddingEnd="2dp"
            android:paddingStart="30dp"
            android:drawableStart="@drawable/phonewhite"/>

        <LinearLayout
            android:layout_width="217dp"
            android:layout_height="wrap_content"
            android:layout_gravity="clip_horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:gravity="clip_horizontal|center"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_marginStart="15dp">

            <TableRow
                android:id="@+id/hf"
                android:layout_width="80dp"
                android:layout_height="1dp"
                android:layout_marginTop="3dp"
                android:background="#121010"
                android:gravity="center">

            </TableRow>

            <TextView
                android:id="@+id/OR"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:gravity="center"
                android:text="@string/or"
                android:textColor="#0C0B0B" />

            <TableRow
                android:id="@+id/df"
                android:layout_width="80dp"
                android:layout_height="1dp"
                android:layout_marginTop="3dp"
                android:background="#0B0A0A"
                android:gravity="center" />
        </LinearLayout>

        <Button
            android:id="@+id/Signup"
            android:layout_width="234dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/btn_shape"
            android:text="@string/signup" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>